<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/fondocontra"
    tools:context=".RecoverPassword">

    <TextView
        android:id="@+id/tvTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recuperar Contraseña"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/celeste"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp" />

    <TextView
        android:id="@+id/tvInstructions1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Por favor, ingresa tu correo electrónico para recibir las instrucciones de recuperación de contraseña."
        android:textSize="16sp"
        android:textColor="#A9A9A9"
        android:layout_below="@id/tvTitle1"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="24dp"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvInstructions1"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo Electrónico"
            android:inputType="textEmailAddress"
            android:paddingStart="50dp"
            android:padding="12dp"
            android:background="@android:color/white"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_usuario2" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etEmail"
        android:layout_marginTop="400dp"
        android:background="@android:color/holo_blue_light"
        android:padding="12dp"
        android:text="Siguiente"
        android:textColor="@android:color/white"
        tools:ignore="NotSibling" />

    <TextView
        android:id="@+id/tvReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSubmit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Regresar a inicio de sesión"
        android:textColor="@color/celeste" />

</RelativeLayout>
